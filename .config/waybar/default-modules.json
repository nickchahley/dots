// shared (across bars) module settings to be imported with "include"["path/to",]
{
	"clock": {
		// "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>", // makes error
		// "format-alt": "{calendar}", // {calendar is cause of error}
		"tooltip-format": "{:%A\n%d %B %Y\n%Hh%M}", 
		"format": "{:%a %d-%b-%y %Hh%M}",
		"format-alt": "{:%Y-%m-%d %a %Hh%M}",
	},
	"custom/clock": {
		"exec": "$HOME/.config/waybar/bin/custom-clock.sh",
		"return-type": "json",
		"interval": 60,
		"format": "{default}",
		"format-alt": "{alt}",
	},
	"battery": {
		"format": "{capacity}% {icon}",
		"format-icons": ["", "", "", "", ""],
	},
	"sway/workspaces": {
		"disable-scroll": true,
	},
	"pulseaudio": {
		"format": "{volume}% {icon} ",
		"format-bluetooth": "{volume}% ",
		"format-muted": "{volume}% 🔇",
		"format-icons": {
			"headphone": "",
			"default": ["", ""]
		},
		"scroll-step": 0,
		"on-click": "pavucontrol",
		"ignored-sinks": ["Easy Effects Sink"]
	}
}
// vim: set ft=jsonc:
