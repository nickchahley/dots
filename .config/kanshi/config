# A profile will be enabled if all listed outputs are connected
# swaymsg -t get_outputs -p | grep Output

profile work-one {
	# DP-1 'Acer Technologies ED320QR S TJNAA0033W01
	output "eDP-1" position 0,0
	output "Acer Technologies ED320QR S TJNAA0033W01" position 1920,0 mode 1920x1080

	exec swaymsg workspace 1 output "eDP-1"
	exec swaymsg workspace 2 output "eDP-1"
	exec swaymsg workspace 3 output "eDP-1"
	exec swaymsg workspace 4 output "eDP-1"
	exec swaymsg workspace 5 output "eDP-1"

	exec swaymsg workspace 6 output  "DP-1"
	exec swaymsg workspace 7 output  "DP-1"
	exec swaymsg workspace 8 output  "DP-1"
	exec swaymsg workspace 9 output  "DP-1"
	exec swaymsg workspace 10 output "DP-1"

	exec swaymsg workspace 6
}

